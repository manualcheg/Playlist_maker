<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_bottom_sheet_player_add_to_playlist"
    android:orientation="vertical"
    app:behavior_hideable="true"
    app:behavior_peekHeight="340dp"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:src="@drawable/rectangle_bottom_sheet_player_add_to_playlist"
        tools:ignore="ContentDescription" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/yandex_sans_text_medium"
        android:gravity="center_horizontal"
        android:text="@string/text_add_to_playlist"
        android:textSize="19sp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/fragment_favourites_button_create_playlist"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp36"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp24"
        android:background="@drawable/placeholder_button_round_corners"
        android:fontFamily="@font/yandex_sans_text_medium"
        android:paddingHorizontal="@dimen/dp16"
        android:text="@string/placeholder_fragment_playlists_text_button_new_playlist"
        android:textAllCaps="false"
        android:textColor="?attr/whiteBlack"
        android:textSize="@dimen/sp14"
        android:visibility="visible" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewPlaylist"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="12dp"
        android:layout_marginTop="24dp"
        android:layout_weight="1"
        android:visibility="gone"
        tools:visibility="visible" />

</LinearLayout>
