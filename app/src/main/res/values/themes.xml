<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PlaylistMaker" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/main_background_color</item>
        <item name="colorPrimaryVariant">@color/main_background_color_lite</item>
        <item name="colorOnPrimary">@color/yp_black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/white_dark</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:colorBackground">@color/white</item>
        <item name="buttonStyle">@style/NotCapsButton</item>
        <item name="android:textColor">@color/yp_black</item>
        <item name="android:textColorHint">@color/yp_text_gray</item>
        <item name="grayWhite">@color/yp_text_gray</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="whiteBlack">@color/white</item>
    </style>

    <style name="NotCapsButton" parent="Widget.AppCompat.Button">
        <item name="android:textAllCaps">false</item>
    </style>
</resources>